<%= form_with model: @product do |form| %>
    <% @product.errors.full_messages.each do |error| %>
        <div>
            <%= error %>
        </div>
    <%end%>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :amount %>
        <%= form.number_field :amount %>
    </div>
    
    <%= form.collection_select :category_id, Category.all, :id, :name %>
    
    <%= form.submit %>
<% end %>